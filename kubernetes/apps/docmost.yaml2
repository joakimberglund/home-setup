apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: docmost
  namespace: argocd
spec:
  project: default
  sources:
    - repoURL: 'https://acidsugarx.github.io/helm-open/'
      chart: docmost
      targetRevision: 0.1.3
      helm:
        valueFiles:
        - $values/kubernetes/components/docmost/helm/values.yaml
    - repoURL: "https://github.com/joakimberglund/home-setup.git"
      targetRevision: main
      ref: values
    - repoURL: "https://github.com/joakimberglund/home-setup.git"
      targetRevision: main
      path: "kubernetes/components/docmost"
  destination:
    server: https://kubernetes.default.svc
    namespace: docmost
  syncPolicy:
    automated: {}
    syncOptions:
    - CreateNamespace=true
